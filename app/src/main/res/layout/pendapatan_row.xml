<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTanggalPendapatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tanggal"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNamaPendapatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTanggalPendapatan"
            android:hint="Nama"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textHargaPendapatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNamaPendapatan"
            android:hint="Harga"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textJumlahPendapatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTanggalPendapatan"
            android:hint="Jumlah"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textSatuanPendapatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textJumlahPendapatan"
            android:hint="Satuan"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textTotalPendapatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textJumlahPendapatan"
            android:hint="Total"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>